<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imgBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_professional_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="#FFD600"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_1"
        tools:text="IMDB: 7.0"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/movie_yellow"
        android:textStyle="bold"
        android:textSize="20sp"
        android:drawablePadding="@dimen/common_min_margin"
        app:drawableStartCompat="@drawable/ic_baseline_star"
        app:layout_constraintTop_toTopOf="@id/tv_professional_rate"
        app:layout_constraintBottom_toBottomOf="@id/tv_professional_rate"
        app:layout_constraintStart_toEndOf="@id/tv_professional_rate"
        tools:text="7.1"
        app:drawableTint="@color/movie_yellow" />

    <TextView
        android:id="@+id/tv_reviews_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawablePadding="@dimen/common_min_margin"
        app:layout_constraintTop_toTopOf="@id/tv_professional_rate"
        app:layout_constraintBottom_toBottomOf="@id/tv_professional_rate"
        app:layout_constraintStart_toEndOf="@id/tv_reviews"
        tools:text="(3500 reviews)"
        app:drawableTint="@color/movie_yellow" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_professional_rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Doctor Strange in the Multiverse of Maddness"
        app:drawableTint="@color/movie_yellow" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/category_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </com.google.android.material.chip.ChipGroup>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@id/category_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="@tools:sample/lorem/random"
            app:drawableTint="@color/movie_yellow" />
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>